{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",



  "Gateway": [
    {
      "UpUrlPrefix": "user",
      "UpMethods": [ "get", "post", "put", "delete" ],
      "ServiceName": "UserApi",
      "LoadBalancing": "Random"
    },
    {
      "UpUrlPrefix": "order",
      "UpMethods": [ "get", "post", "put", "delete" ],
      "ServiceName": "OrderApi",
      "LoadBalancing": "RoundRobin"
    }
  ]
}
